<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.InstructorController"
            prefHeight="744.0" prefWidth="1251.0">

    <children>
        <HBox spacing="10" prefHeight="744.0" prefWidth="1251.0">

            <VBox spacing="20"
                  prefWidth="180" prefHeight="744"
                  style="-fx-background-color: #ecf0f1;"
                  alignment="TOP_CENTER">

                <Label text="Dashboard" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
                <Button fx:id="btnStudents" text="Students" prefWidth="160" prefHeight="50"/>
                <Button fx:id="btnCourses" text="Courses" prefWidth="160" prefHeight="50"/>
                <Button fx:id="btnLessons" text="Lessons" prefWidth="160" prefHeight="50"/>
                <Button fx:id="btnInstructors" text="Instructors" prefWidth="160" prefHeight="50"/>
                <Button fx:id="btnUsers" text="Users" prefWidth="160" prefHeight="50"/>
                <Button fx:id="btnPayments" text="Payments" prefWidth="160" prefHeight="50"/>
            </VBox>

            <VBox spacing="20" alignment="TOP_CENTER"
                  prefWidth="1070" prefHeight="744"
                  style="-fx-border-color: #2c3e50; -fx-border-width: 2;">

                <Label text="Instructor Management"
                       style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <GridPane hgap="15" vgap="15" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT"/>
                        <ColumnConstraints prefWidth="300"/>
                    </columnConstraints>

                    <children>
                        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtFullName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtEmail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtPhone" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Specialization:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtSpecialization" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="15" alignment="CENTER">
                    <Button fx:id="btnSave" text="Save" prefWidth="100"/>
                    <Button fx:id="btnUpdate" text="Update" prefWidth="100"/>
                    <Button fx:id="btnDelete" text="Delete" prefWidth="100"/>
                    <Button fx:id="btnClear" text="Clear" prefWidth="100"/>
                </HBox>

                <TableView fx:id="tblInstructors" prefWidth="1000" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="colInstructorId" text="Instructor ID" prefWidth="120"/>
                        <TableColumn fx:id="colFullName" text="Full Name" prefWidth="180"/>
                        <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
                        <TableColumn fx:id="colPhone" text="Phone" prefWidth="120"/>
                        <TableColumn fx:id="colSpecialization" text="Specialization" prefWidth="180"/>
                    </columns>
                </TableView>
            </VBox>

        </HBox>
    </children>
</AnchorPane>
