<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.ijse.controller.MainController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox alignment="CENTER" spacing="30" prefHeight="400" prefWidth="600">
            <Label text="Select Role"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <HBox alignment="CENTER" spacing="60">

                <VBox alignment="CENTER" spacing="10">
                    <ImageView fx:id="imgAdmin" fitHeight="120" fitWidth="120"
                               pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../assets/admin.png"/>
                        </image>
                    </ImageView>
                    <Button fx:id="btnAdmin" text="Admin" prefWidth="120"/>
                </VBox>


                <VBox alignment="CENTER" spacing="10">
                    <ImageView fx:id="imgReceptionist" fitHeight="120" fitWidth="120"
                               pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../assets/receptionist.png"/>
                        </image>
                    </ImageView>
                    <Button fx:id="btnReceptionist" text="Receptionist" prefWidth="120"/>
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
