<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="744.0" prefWidth="1251.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.controller.DashBoardController">

    <children>
        <Label layoutX="20.0" layoutY="20.0"
               style="-fx-font-size: 28px; -fx-font-weight: bold;"
               text="Dashboard"/>

        <VBox layoutX="20.0" layoutY="80.0" spacing="20"
              prefWidth="180" prefHeight="640"
              style="-fx-background-color: #ecf0f1;"
              alignment="TOP_CENTER">
            <Button fx:id="btnStudents" text="Students" prefWidth="160" prefHeight="50"/>
            <Button fx:id="btnCourses" text="Courses" prefWidth="160" prefHeight="50"/>
            <Button fx:id="btnLessons" text="Lessons" prefWidth="160" prefHeight="50"/>
            <Button fx:id="btnInstructors" text="Instructors" prefWidth="160" prefHeight="50"/>
            <Button fx:id="btnUsers" text="Users" prefWidth="160" prefHeight="50"/>
            <Button fx:id="btnPayments" text="Payments" prefWidth="160" prefHeight="50"/>
        </VBox>

        <HBox fx:id="contentArea" layoutX="220.0" layoutY="80.0"
              prefWidth="1010.0" prefHeight="640.0"
              style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc; -fx-border-width: 1;">
        </HBox>
    </children>
</AnchorPane>
