<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.ijse.controller.UserController"
            prefHeight="600.0" prefWidth="900.0">

    <children>
        <VBox spacing="20" alignment="TOP_CENTER" prefWidth="900" prefHeight="600">

            <Label text="User Management"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <GridPane hgap="15" vgap="15" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints prefWidth="300"/>
                </columnConstraints>

                <children>
                    <Label text="User ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtUserId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtUsername" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="txtPassword" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Role:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cmbRole" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnSave" text="Save" prefWidth="100"/>
                <Button fx:id="btnUpdate" text="Update" prefWidth="100"/>
                <Button fx:id="btnDelete" text="Delete" prefWidth="100"/>
                <Button fx:id="btnClear" text="Clear" prefWidth="100"/>
            </HBox>

            <TableView fx:id="tblUsers" prefWidth="850" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colUserId" text="User ID" prefWidth="120"/>
                    <TableColumn fx:id="colUsername" text="Username" prefWidth="150"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
                    <TableColumn fx:id="colRole" text="Role" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
