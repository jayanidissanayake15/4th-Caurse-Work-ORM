<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.ijse.controller.PaymentController"
            prefHeight="600.0" prefWidth="900.0">

    <children>
        <VBox spacing="20" alignment="TOP_CENTER" prefWidth="900" prefHeight="600">

            <Label text="Payment Management"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <GridPane hgap="15" vgap="15" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints prefWidth="300"/>
                </columnConstraints>

                <children>
                    <Label text="Payment ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtPaymentId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Student:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cmbStudent" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Course:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cmbCourse" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Amount (LKR):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtAmount" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Date:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="datePayment" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Status:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cmbStatus" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnSave" text="Save" prefWidth="100"/>
                <Button fx:id="btnUpdate" text="Update" prefWidth="100"/>
                <Button fx:id="btnDelete" text="Delete" prefWidth="100"/>
                <Button fx:id="btnClear" text="Clear" prefWidth="100"/>
            </HBox>

            <TableView fx:id="tblPayments" prefWidth="850" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colPaymentId" text="Payment ID" prefWidth="120"/>
                    <TableColumn fx:id="colStudent" text="Student" prefWidth="150"/>
                    <TableColumn fx:id="colCourse" text="Course" prefWidth="150"/>
                    <TableColumn fx:id="colAmount" text="Amount (LKR)" prefWidth="120"/>
                    <TableColumn fx:id="colDate" text="Date" prefWidth="120"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
