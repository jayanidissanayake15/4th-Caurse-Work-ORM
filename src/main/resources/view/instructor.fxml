<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.ijse.controller.InstructorController"
            prefHeight="600.0" prefWidth="900.0">

    <children>
        <VBox spacing="20" alignment="TOP_CENTER" prefWidth="900" prefHeight="600">

            <Label text="Instructor Management"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <GridPane hgap="15" vgap="15" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints prefWidth="300"/>
                </columnConstraints>

                <children>
                    <Label text="Instructor ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtInstructorId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Full Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtFullName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Phone:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtPhone" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Specialization:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtSpecialization" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnSave" text="Save" prefWidth="100"/>
                <Button fx:id="btnUpdate" text="Update" prefWidth="100"/>
                <Button fx:id="btnDelete" text="Delete" prefWidth="100"/>
                <Button fx:id="btnClear" text="Clear" prefWidth="100"/>
            </HBox>

            <TableView fx:id="tblInstructors" prefWidth="800" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colInstructorId" text="Instructor ID" prefWidth="120"/>
                    <TableColumn fx:id="colFullName" text="Full Name" prefWidth="180"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
                    <TableColumn fx:id="colPhone" text="Phone" prefWidth="120"/>
                    <TableColumn fx:id="colSpecialization" text="Specialization" prefWidth="180"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
