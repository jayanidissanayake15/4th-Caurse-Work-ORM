<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.ijse.controller.AdminLoginController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <Label text="Login"
               layoutX="260" layoutY="60"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <Label text="Username:" layoutX="150" layoutY="140"/>
        <TextField fx:id="txtUsername" layoutX="250" layoutY="135"
                   prefWidth="200" promptText="Enter username"/>

        <Label text="Password:" layoutX="150" layoutY="190"/>
        <PasswordField fx:id="txtPassword" layoutX="250" layoutY="185"
                       prefWidth="200" promptText="Enter password"/>

        <Button fx:id="btnLogin" text="Login"
                layoutX="250" layoutY="250" prefWidth="90"/>
        <Button fx:id="btnCancel" text="Cancel"
                layoutX="360" layoutY="250" prefWidth="90"/>

        <Label text="Don't have an account?" layoutX="200" layoutY="310"/>
        <Hyperlink fx:id="linkSignUp" text="Sign Up" layoutX="340" layoutY="310"/>
    </children>
</AnchorPane>
